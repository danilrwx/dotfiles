[core]
	editor = nvim
	pager = delta

[user]
	name = Daniil Antoshin
	email = daniil.antoshin@flant.com

[pull]
	rebase = true

[interactive]
	diffFilter = delta --color-only

[delta]
	navigate = true
	light = true
	hyperlinks = true

[merge]
	conflictstyle = diff3

[diff]
	colorMoved = default
[alias]
      commit = commit --signoff
[diff "dyff"]
	command = "dyff_between() { dyff --color on between --omit-header \"$2\" \"$5\"; }; dyff_between"
