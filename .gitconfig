[core]
  editor = nvim
  attributesfile = /Users/danil/.gitattributes
  excludesfile = /Users/danil/.gitignore_global

[user]
  name = Daniil Antoshin
  email = daniil.antoshin@flant.com
  signingkey = FD3CC5C71FFD6458

[commit]
  gpgsign = true
	verbose = true

[pull]
  rebase = true

[alias]
  commit = commit --signoff

[tag]
  gpgSign = true

[rerere]
	enabled = true

[format]
	signOff = yes

[diff]
    tool = nvimdiff
[difftool]
    prompt = false
[difftool "nvimdiff"]
    cmd = "nvim -d \"$LOCAL\" \"$REMOTE\""

[merge]
	tool = nvimdiff
[mergetool]
    prompt = true
[mergetool "nvimdiff"]
    cmd = "nvim -d \"$LOCAL\" \"$REMOTE\" \"$MERGED\" -c 'wincmd w' -c 'wincmd J'"
